<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           android:orientation="vertical"
                                           android:id="@+id/drawer_layoutL" android:fitsSystemWindows="true"
                                           android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
                                                         android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout android:id="@+id/appbar"
                                                         android:background="@drawable/back_mount"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="match_parent">
            <com.google.android.material.appbar.CollapsingToolbarLayout android:id="@+id/collapsingToolbarL"
                                                                        android:layout_width="match_parent"
                                                                        android:layout_height="match_parent"
                                                                        app:collapsedTitleGravity="center"
                                                                        app:collapsedTitleTextAppearance="@style/textAppearanceCollapsed"
                                                                        app:contentScrim="?attr/colorPrimary"
                                                                        app:expandedTitleGravity="center"
                                                                        app:expandedTitleMarginTop="150dp"
                                                                        app:expandedTitleTextAppearance="@style/textAppearanceExtended"
                                                                        app:layout_scrollFlags="snap|exitUntilCollapsed|scroll"
                                                                        app:layout_scrollInterpolator="@android:interpolator/overshoot"
                                                                        app:title="اپلیکیشن کوهنورد"
                                                                        app:toolbarId="@+id/tools_toolbarL">
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/layout_constraintBig"
                                                                   android:layout_width="match_parent"
                                                                   android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView android:id="@+id/teachCardL" android:layout_width="90dp"
                                                       android:layout_height="90dp" android:layout_marginTop="16dp"
                                                       android:layout_marginBottom="16dp"
                                                       android:onClick="menuCardClick" android:layout_marginStart="8dp"
                                                       app:cardCornerRadius="10dp"
                                                       app:layout_constraintBottom_toTopOf="@+id/groupCardL"
                                                       app:layout_constraintEnd_toStartOf="@+id/toolsCardL"
                                                       app:layout_constraintHorizontal_bias="0.5"
                                                       app:layout_constraintHorizontal_chainStyle="spread"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintVertical_bias="1"
                                                       app:layout_constraintVertical_chainStyle="packed">
                        <LinearLayout android:gravity="center" android:orientation="vertical"
                                      android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                                       android:src="@drawable/ic_teach_black_24dp"
                                       android:tint="@color/colorPrimaryDark2"/>
                            <TextView android:textSize="11sp" android:textColor="@color/colorPrimaryDark2"
                                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:text="دوره های آموزشی"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/toolsCardL" android:layout_width="90dp"
                                                       android:layout_height="90dp" android:onClick="menuCardClick"
                                                       android:layout_marginStart="8dp" app:cardCornerRadius="10dp"
                                                       app:layout_constraintEnd_toStartOf="@+id/mapCardL"
                                                       app:layout_constraintHorizontal_bias="0.5"
                                                       app:layout_constraintHorizontal_chainStyle="spread"
                                                       app:layout_constraintStart_toEndOf="@+id/teachCardL"
                                                       app:layout_constraintTop_toTopOf="@+id/teachCardL">
                        <LinearLayout android:gravity="center" android:orientation="vertical"
                                      android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                                       android:src="@drawable/ic_apps_black_24dp"
                                       android:tint="@color/colorPrimaryDark2"/>
                            <TextView android:textColor="@color/colorPrimaryDark2" android:layout_width="wrap_content"
                                      android:layout_height="wrap_content" android:text="ابزار ها"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/mapCardL" android:layout_width="90dp"
                                                       android:layout_height="90dp" android:onClick="menuCardClick"
                                                       android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                                                       app:cardCornerRadius="10dp"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintHorizontal_bias="0.5"
                                                       app:layout_constraintHorizontal_chainStyle="spread"
                                                       app:layout_constraintStart_toEndOf="@+id/toolsCardL"
                                                       app:layout_constraintTop_toTopOf="@+id/toolsCardL">
                        <LinearLayout android:gravity="center" android:orientation="vertical"
                                      android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                                       android:src="@drawable/ic_map_black_24dp"
                                       android:tint="@color/colorPrimaryDark2"/>
                            <TextView android:textColor="@color/colorPrimaryDark2" android:layout_width="wrap_content"
                                      android:layout_height="wrap_content" android:text="نقشه گردی"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/groupCardL" android:layout_width="90dp"
                                                       android:layout_height="90dp" android:layout_marginTop="16dp"
                                                       android:layout_marginBottom="24dp"
                                                       android:onClick="menuCardClick" android:layout_marginStart="8dp"
                                                       app:cardCornerRadius="10dp"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       app:layout_constraintEnd_toStartOf="@+id/profileCardL"
                                                       app:layout_constraintHorizontal_bias="0.5"
                                                       app:layout_constraintHorizontal_chainStyle="spread"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@+id/teachCardL"
                                                       app:layout_constraintVertical_bias="0"
                                                       app:layout_constraintVertical_chainStyle="spread_inside">
                        <LinearLayout android:gravity="center" android:orientation="vertical"
                                      android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                                       android:src="@drawable/ic_people_black_24dp"
                                       android:tint="@color/colorPrimaryDark2"/>
                            <TextView android:textColor="@color/colorPrimaryDark2" android:layout_width="wrap_content"
                                      android:layout_height="wrap_content" android:text="گروه ها"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/profileCardL" android:layout_width="90dp"
                                                       android:layout_height="90dp" android:onClick="menuCardClick"
                                                       android:layout_marginStart="8dp" app:cardCornerRadius="10dp"
                                                       app:layout_constraintBottom_toBottomOf="@+id/groupCardL"
                                                       app:layout_constraintEnd_toStartOf="@+id/storeCardL"
                                                       app:layout_constraintHorizontal_bias="0.5"
                                                       app:layout_constraintHorizontal_chainStyle="spread"
                                                       app:layout_constraintStart_toEndOf="@+id/groupCardL"
                                                       app:layout_constraintTop_toTopOf="@+id/groupCardL"
                                                       app:layout_constraintVertical_bias="0">
                        <LinearLayout android:gravity="center" android:orientation="vertical"
                                      android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                                       android:src="@drawable/ic_account_circle_black_24dp"
                                       android:tint="@color/colorPrimaryDark2"/>
                            <TextView android:textColor="@color/colorPrimaryDark2" android:layout_width="wrap_content"
                                      android:layout_height="wrap_content" android:text="پروفایل"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/storeCardL" android:layout_width="90dp"
                                                       android:layout_height="90dp" android:onClick="menuCardClick"
                                                       android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                                                       app:cardCornerRadius="10dp"
                                                       app:layout_constraintBottom_toBottomOf="@+id/profileCardL"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintHorizontal_bias="0.5"
                                                       app:layout_constraintHorizontal_chainStyle="spread"
                                                       app:layout_constraintStart_toEndOf="@+id/profileCardL"
                                                       app:layout_constraintTop_toTopOf="@+id/profileCardL">
                        <LinearLayout android:gravity="center" android:orientation="vertical"
                                      android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                                       android:src="@drawable/ic_store_black_24dp"
                                       android:tint="@color/colorPrimaryDark2"/>
                            <TextView android:textColor="@color/colorPrimaryDark2" android:layout_width="wrap_content"
                                      android:layout_height="wrap_content" android:text="فروشگاه"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.Toolbar android:id="@+id/tools_toolbarL" android:layout_width="match_parent"
                                                   android:layout_height="?attr/actionBarSize"
                                                   android:layoutDirection="rtl" app:layout_collapseMode="pin"
                                                   app:layout_scrollFlags="exitUntilCollapsed|snap|scroll"
                                                   app:navigationIcon="@drawable/ic_menu_black_24dp">
                    <LinearLayout android:gravity="left|center"
                                  android:orientation="horizontal" android:layout_width="match_parent"
                                  android:layout_height="match_parent">
                        <LinearLayout android:gravity="center" android:layout_gravity="center"
                                      android:orientation="horizontal" android:id="@+id/loginMain"
                                      android:paddingLeft="16dp" android:paddingRight="10dp"
                                      android:layout_width="wrap_content" android:layout_height="match_parent">
                            <TextView android:textSize="14sp" android:textColor="@color/backgroundWhite"
                                      android:layout_gravity="center" android:id="@+id/textView32"
                                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:layout_marginLeft="4dp" android:text="ورود"/>
                            <ImageButton android:background="@android:color/transparent" android:layout_width="30dp"
                                         android:layout_height="30dp" android:src="@drawable/ic_person_black_24dp"
                                         android:scaleType="fitCenter"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView android:id="@+id/nestedScrollView"
                                               android:background="@color/backgroundWhite"
                                               android:layout_width="match_parent" android:layout_height="match_parent"
                                               android:fillViewport="true"
                                               app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <include layout="@layout/activity_main3"/>
                <include layout="@layout/content_scrolling"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.rom4ek.arcnavigationview.ArcNavigationView android:layout_gravity="right" android:id="@+id/navigation_viewL"
                                                    android:background="@color/colorPrimaryGlass" android:fitsSystemWindows="true"
                                                    android:layout_width="200dp" android:layout_height="match_parent"
                                                    android:layoutDirection="rtl" app:arc_cropDirection="cropInside"
                                                    app:arc_width="50dp"
                                                    app:itemBackground="@android:color/transparent"
                                                    app:headerLayout="@layout/header_draw"
                                                    app:itemIconTint="@color/colorPrimaryDark2"
                                                    app:itemTextAppearance="@style/itemTextApp"
                                                    app:itemTextColor="@color/white"
                                                    app:menu="@menu/navigate_draw"/>
</androidx.drawerlayout.widget.DrawerLayout>