<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#00ACC1">

    <TextView
            android:text="موجودی کیف پول"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView49" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/yekan"
            android:layout_marginEnd="16dp" android:textColor="@color/blue_dark" android:textSize="22sp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="۱,۶۸۰,۰۰۰ تومان"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView50" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView49" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView49" android:textSize="30sp"
            android:textColor="@color/white" android:layout_marginStart="8dp"/>
    <Button
            android:text="گزارش گیری"
            android:layout_width="wrap_content"
            android:paddingHorizontal="12dp"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_assignment_black_24dp"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/blue_dark_transparent"
            android:id="@+id/button4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView50"
            app:layout_constraintStart_toStartOf="parent" android:background="@drawable/back_filter_left"
            android:textColor="@color/white" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView50" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>