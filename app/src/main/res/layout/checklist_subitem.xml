<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
                android:layout_width="match_parent" android:layout_height="48dp" android:layout_margin="4dp">
    <TextView android:textSize="18sp" android:textColor="@color/gray" android:gravity="center_vertical"
              android:id="@+id/sub_title" android:layout_width="wrap_content" android:layout_height="match_parent"
              android:layout_marginLeft="8dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"
              android:fontFamily="@font/yekan" android:layout_marginStart="8dp" android:layout_alignParentStart="true"/>
    <ImageView android:id="@+id/remove_sub_item" android:padding="16dp" android:layout_width="48dp"
               android:layout_height="48dp" android:layout_marginRight="8dp" android:src="@drawable/ic_clear_black_24dp"
               android:tint="@color/black" android:layout_alignParentRight="true" android:layout_centerVertical="true"
               android:layout_marginEnd="8dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
