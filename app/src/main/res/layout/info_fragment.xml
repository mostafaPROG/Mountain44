<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
              android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:textColor="@color/darkGray" android:ellipsize="end"
              android:id="@+id/textInfo" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp"
              android:text="گروه کوهنوردى ام اس سنتر در آبان ماه سال ١٣٩٠، با پیشنهاد چند نفر از بیماران ام اس عضو وبسایت تخصصى ام اس سنتر و علاقه مند به ورزش کوهنوردى شکل گرفت. در ۶ آبان ١٣٩٠ اولین برنامه خود را اجرا کرد. در ابتدا، اعضاى گروه تنها بیماران ام اس بودند؛ اما رفته رفته سایر علاقه مندان به کوهنوردى و حامیان بیماران ام اس نیز به گروه اضافه شدند. این گروه تا کنون موفق به صعود قله های بسیاری شده است که از میان آنها مى توان به قله هاى دماوند، علم کوه، سبلان، شاه البرز، کلون بستک، شیرکوه، خلنو، توچال، سهند، کرکس و الوند اشاره کرد. همچنین در مرداد ماه سال ١٣٩۴، گروه کوهنوردى ام اس سنتر اولین صعود برون مرزی خود را با صعود به قله آرارات، به ثبت رسانید."
              android:maxLines="2" android:ems="10" android:textDirection="rtl"/>
    <ImageButton android:layout_gravity="start" android:id="@+id/moreButton"
                 android:background="@android:color/transparent" android:layout_width="match_parent"
                 android:layout_height="20dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                 android:src="@drawable/ic_expand_more_black_24dp" android:tint="@color/darkGray"/>
    <com.google.android.material.internal.BaselineLayout android:background="@color/darkGray"
                                                         android:layout_width="match_parent" android:layout_height="1dp"
                                                         android:layout_marginLeft="8dp"
                                                         android:layout_marginRight="8dp"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       android:layout_marginLeft="10dp" android:layout_marginTop="20dp"
                                       android:layout_marginRight="10dp" android:layout_marginBottom="10dp"
                                       app:cardBackgroundColor="@color/green" app:cardCornerRadius="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <TextView android:textSize="18sp" android:textColor="#ffffff" android:gravity="right"
                      android:id="@+id/textView27" android:paddingRight="10dp" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_margin="4dp" android:text="نزدیک ترین رویداد"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.internal.BaselineLayout android:id="@+id/baselineLayout"
                                                                 android:background="@color/backgroundWhite"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="0.5dp"
                                                                 android:layout_marginStart="8dp"
                                                                 app:layout_constraintEnd_toEndOf="@+id/textView27"
                                                                 app:layout_constraintStart_toStartOf="@+id/textView27"
                                                                 app:layout_constraintTop_toBottomOf="@+id/textView27"/>
            <TextView android:textSize="14sp" android:textColor="#d8fdfffc" android:gravity="center"
                      android:id="@+id/textView30" android:layout_width="0dp" android:layout_height="0dp"
                      android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="فتح قله بینالود"
                      android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                      app:layout_constraintBottom_toTopOf="@+id/textView31"
                      app:layout_constraintEnd_toEndOf="@+id/textView27"
                      app:layout_constraintStart_toEndOf="@+id/imageView15"
                      app:layout_constraintTop_toBottomOf="@+id/baselineLayout"/>
            <ImageView android:id="@+id/imageView15" android:layout_width="0dp" android:layout_height="wrap_content"
                       android:src="@drawable/ic_add_alert_black_24dp" android:maxWidth="80dp" android:maxHeight="80dp"
                       android:minWidth="40dp" android:minHeight="40dp" android:layout_marginStart="8dp"
                       app:layout_constraintBottom_toBottomOf="@+id/textView30" app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="@+id/textView30"/>
            <TextView android:textSize="8sp" android:textColor="#d8fdfffc" android:id="@+id/textView31"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginBottom="8dp" android:text="22 اردیبهشت 98"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/textView30"
                      app:layout_constraintStart_toStartOf="@+id/textView30"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
