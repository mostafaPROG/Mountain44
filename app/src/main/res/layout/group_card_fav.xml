<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_margin="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:background="@drawable/back_stroke_pr3"
                                                       android:backgroundTint="@color/colorPrimary"
                                                       android:layout_height="match_parent">
        <ImageView android:id="@+id/imageView2" android:drawingCacheQuality="auto" android:layout_width="0dp"
                   android:layout_height="0dp" android:layout_marginTop="64dp"
                   android:src="@color/colorPrimaryDark"
                   android:scaleType="fitXY" app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1"
                   app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_weight="0.5" app:layout_constraintVertical_bias="1.0"/>
        <com.mikhaellopez.circularimageview.CircularImageView android:id="@+id/imageGroupCardFav"
                                                              android:drawingCacheQuality="auto"
                                                              android:layout_width="100dp"
                                                              android:layout_height="100dp"
                                                              android:layout_marginTop="8dp"
                                                              android:src="@drawable/logo1"
                                                              android:scaleType="centerCrop"
                                                              android:layout_marginStart="8dp"
                                                              android:layout_marginEnd="8dp"
                                                              app:civ_border_color="@color/colorPrimaryLight"
                                                              app:civ_border_width="2dp"
                                                              app:civ_shadow="false"
                                                              app:layout_constraintEnd_toEndOf="parent"
                                                              app:layout_constraintStart_toStartOf="parent"
                                                              app:layout_constraintTop_toTopOf="@+id/imageView2"
                                                              app:layout_constraintBottom_toTopOf="@+id/imageView2"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/textView18"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="تعداد اعضاء"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                  app:layout_constraintBottom_toBottomOf="@+id/imageGroupCardFav"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/imageGroupCardFav"
                  app:layout_constraintTop_toTopOf="@+id/imageView2" android:layout_marginBottom="8dp"
                  android:layout_marginTop="8dp" app:layout_constraintVertical_bias="0.0"
                  android:fontFamily="@font/yekan"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/textView23"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp" android:text="رتبه"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                  app:layout_constraintBottom_toBottomOf="@+id/imageGroupCardFav"
                  app:layout_constraintEnd_toStartOf="@+id/imageGroupCardFav"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="@+id/imageView2" android:layout_marginBottom="8dp"
                  app:layout_constraintVertical_bias="0.0" android:fontFamily="@font/yekan"/>
        <TextView android:textSize="24sp" android:textColor="@color/colorPrimaryLight" android:id="@+id/nameCardGroupFav"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="گروه دماوند"
                  app:layout_constraintEnd_toEndOf="@+id/imageGroupCardFav"
                  app:layout_constraintStart_toStartOf="@+id/imageGroupCardFav"
                  app:layout_constraintTop_toBottomOf="@+id/imageGroupCardFav" android:layout_marginBottom="16dp"
                  app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                  app:layout_constraintVertical_bias="0.0" android:fontFamily="@font/yekan"/>
        <TextView android:textSize="24sp" android:textColor="@color/darkGray" android:id="@+id/rankCardGroupFav"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="112"
                  app:layout_constraintBottom_toTopOf="@+id/imageView2"
                  app:layout_constraintEnd_toEndOf="@+id/textView23"
                  app:layout_constraintStart_toStartOf="@+id/textView23" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="@+id/imageGroupCardFav" android:layout_marginBottom="8dp"
                  app:layout_constraintVertical_bias="1.0" android:fontFamily="@font/yekan"/>
        <TextView android:textSize="24sp" android:textColor="@color/darkGray" android:id="@+id/memCardGroupFav"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="26"
                  app:layout_constraintBottom_toTopOf="@+id/imageView2"
                  app:layout_constraintEnd_toEndOf="@+id/textView18"
                  app:layout_constraintStart_toStartOf="@+id/textView18" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="@+id/imageGroupCardFav" android:layout_marginBottom="8dp"
                  app:layout_constraintVertical_bias="1.0" android:fontFamily="@font/yekan"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/ic_favorite_border_black_24dp"
                android:id="@+id/imageButton2" android:background="@android:color/transparent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/nameCardGroupFav"
                app:layout_constraintStart_toEndOf="@+id/nameCardGroupFav" android:layout_marginStart="8dp"
                android:tint="@color/colorRed" app:layout_constraintTop_toTopOf="@+id/nameCardGroupFav"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/ic_share_black_24dp"
                android:id="@+id/imageButton3" android:background="@android:color/transparent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/imageView2"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/nameCardGroupFav"
                app:layout_constraintBottom_toBottomOf="@+id/nameCardGroupFav"
                android:tint="@color/white" app:layout_constraintTop_toTopOf="@+id/nameCardGroupFav"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>