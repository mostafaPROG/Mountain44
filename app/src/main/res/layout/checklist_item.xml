<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
                android:padding="16dp" android:layout_width="match_parent" android:layout_height="94dp">
    <TextView android:textSize="22sp" android:textColor="@color/darkGray"
              android:gravity="start" android:id="@+id/title"
              android:textStyle="normal"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerVertical="true" android:fontFamily="@font/yekan"/>
    <ImageView android:id="@+id/add_more_sub_items" android:padding="12dp" android:layout_width="48dp"
               android:layout_height="48dp" android:layout_marginRight="16dp"
               android:src="@drawable/ic_clear_black_24dp" android:tint="@color/black"
               android:layout_alignParentRight="true" android:layout_centerVertical="true" android:rotation="45"
               android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/remove_item" android:padding="12dp" android:layout_width="48dp"
               android:layout_height="48dp" android:layout_marginRight="8dp" android:src="@drawable/ic_clear_black_24dp"
               android:tint="@color/black" android:layout_toLeftOf="@+id/add_more_sub_items"
               android:layout_centerVertical="true" android:layout_toStartOf="@+id/add_more_sub_items"/>
</RelativeLayout>
