<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ImageView android:id="@+id/imageView16" android:layout_width="0dp" android:layout_height="0dp"
               android:scaleType="centerCrop" android:tint="#4B000000" app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/splash2"/>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/animation_view" android:layout_width="300dp"
                                           android:layout_height="300dp"
                                           android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:lottie_autoPlay="true" app:lottie_fileName="anim/preloader.json"
                                           app:lottie_loop="true"
                                           app:layout_constraintBottom_toBottomOf="@+id/imageView16"
                                           app:layout_constraintTop_toBottomOf="@+id/textview2"
                                           android:layout_marginBottom="8dp"/>
    <com.hanks.htextview.typer.TyperTextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/textview2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:charIncrease="1"
            app:typerSpeed="80"
            android:fontFamily="@font/iransansweb"
            android:textSize="42sp"
            android:textColor="@color/colorPrimary2"
            android:text="کــوهنورد"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/logo2"
            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:scaleType="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="@+id/imageView16"
            android:layout_marginTop="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
