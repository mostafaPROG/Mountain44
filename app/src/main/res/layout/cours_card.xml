<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:src="@drawable/card_course"
                       android:id="@+id/cardCourseClicked"
                       android:scaleType="centerCrop" tools:layout_editor_absoluteY="35dp"
                       tools:layout_editor_absoluteX="0dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/cardCourseClicked"
                    app:layout_constraintEnd_toEndOf="@+id/cardCourseClicked"
                    android:id="@+id/linearLayout"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/cardCourseClicked"
                    app:layout_constraintBottom_toBottomOf="@+id/cardCourseClicked"
                    app:layout_constraintVertical_bias="1.0" android:background="@color/white">
                <TextView
                        tools:text="دوره آموزشی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/titleCardCourse"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="right" android:layout_marginRight="16dp"
                        android:textColor="@color/colorPrimaryDark" android:textSize="18sp" android:textStyle="bold"/>
                <TextView
                        android:layout_width="match_parent"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_height="wrap_content" android:id="@+id/descriptCourseCard"
                        android:gravity="center"
                        android:textColor="@color/black" android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text="بیشتر"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:gravity="left"
                        android:layout_gravity="bottom" android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView10"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>