                android:tint="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/timeRunEvent"
                app:layout_constraintEnd_toStartOf="@+id/timeRunEvent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
