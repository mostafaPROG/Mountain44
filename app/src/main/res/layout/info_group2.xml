<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="گروه کوهنوردی میعاد"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/yekan"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="@color/darkGray" android:textSize="24sp"/>
    <TextView
            android:text="۶۱۸۰۱۹۸۴۴۳۱۰۰۴"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:textColor="@color/gray"/>
    <TextView
            android:text="شماره مجوز"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="14sp"
            android:textColor="#E7D249"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="16dp"/>
    <TextView
            android:text="خراسان رضوی ، تربت حیدریه"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView3" android:textSize="14sp"
            android:textColor="@color/gray" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="محل گروه"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView36"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="16dp"
            android:textSize="14sp" android:textColor="#E7D249"/>
    <TextView
            android:text="مصطفی قربانزاده"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView44"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/textView17"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="لیدر"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView45"
            android:textSize="14sp"
            android:textColor="#E7D249"
            app:layout_constraintTop_toTopOf="@+id/textView44"
            app:layout_constraintBottom_toBottomOf="@+id/textView44"
            app:layout_constraintStart_toEndOf="@+id/textView44" android:layout_marginStart="16dp"/>
    <Button
            android:text="مشاهده مجوز"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingHorizontal="12dp"
            android:id="@+id/btnCertificate"
            android:drawablePadding="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btnTagdir"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_account_box_black_24dp" android:background="@drawable/background"
            android:textColor="@color/white" android:textSize="10sp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/textView44" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="تقدیر نامه ها"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnTagdir"
            android:drawableLeft="@drawable/ic_import_contacts_black_24dp"
            android:drawableTint="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:drawablePadding="4dp"
            app:layout_constraintTop_toTopOf="@+id/btnCertificate"
            app:layout_constraintBottom_toBottomOf="@+id/btnCertificate" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/btnCertificate"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            android:background="@drawable/background" android:textSize="10sp" android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
