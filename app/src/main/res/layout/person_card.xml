<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/constraintPersonCard">
    <com.skyline.widget.layout.RoundCornerLayout android:layout_width="60dp"
                                                 app:cornerRadius="10dp"
                                                 app:topLeftEnabled="true"
                                                 app:topRightEnabled="true"
                                                 app:bottomLeftEnabled="true"
                                                 app:bottomRightEnabled="true"
                                                 android:layout_height="60dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 android:layout_marginBottom="8dp"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 android:id="@+id/roundCornerLayout">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:src="@drawable/def_prof"/>
    </com.skyline.widget.layout.RoundCornerLayout>
    <TextView
            android:text="mostafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameCardPerson" app:layout_constraintStart_toEndOf="@+id/roundCornerLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/roundCornerLayout"
            app:layout_constraintBottom_toBottomOf="@+id/roundCornerLayout"
            app:layout_constraintVertical_bias="0.31"
            android:textColor="@color/black"
            android:textSize="16sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView12" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stateCardPerson" android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/nameCardPerson"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nameCardPerson"
            app:layout_constraintBottom_toBottomOf="@+id/roundCornerLayout" android:textColor="@color/gray"/>
    <TextView
            android:text="3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/textView12" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/nameCardPerson"
            app:layout_constraintBottom_toBottomOf="@+id/nameCardPerson" android:textSize="18sp"
            android:background="@drawable/background_search" android:scrollbarThumbHorizontal="@color/backgroundWhite"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>