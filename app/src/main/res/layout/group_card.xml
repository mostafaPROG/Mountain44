<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent"
                                   android:layout_height="180dp" android:layout_marginTop="4dp"
                                   app:cardCornerRadius="8dp"
                                   android:layout_marginLeft="8dp"
                                   android:layout_marginRight="8dp"
                                   android:elevation="8dp"
                                   android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
                                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <ImageView android:id="@+id/imageView2" android:drawingCacheQuality="auto" android:layout_width="0dp"
                   android:layout_height="0dp" android:layout_marginTop="64dp" android:src="@color/colorPrimaryLight"
                   android:scaleType="fitXY" app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0"
                   app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <com.mikhaellopez.circularimageview.CircularImageView android:id="@+id/imageGroupCard"
                                                              android:drawingCacheQuality="auto"
                                                              android:layout_width="100dp" android:layout_height="100dp"
                                                              android:layout_marginTop="8dp"
                                                              android:src="@drawable/back_mount2"
                                                              android:scaleType="centerCrop"
                                                              android:layout_marginStart="8dp"
                                                              android:layout_marginEnd="8dp"
                                                              app:civ_border_color="@color/colorPrimaryDark" app:civ_border_width="2dp"
                                                              app:civ_shadow="true" app:civ_shadow_color="@color/gray"
                                                              app:civ_shadow_radius="10"
                                                              app:layout_constraintEnd_toEndOf="parent"
                                                              app:layout_constraintStart_toStartOf="parent"
                                                              app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:textSize="12sp" android:textColor="@color/darkGray" android:id="@+id/textView18"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="تعداد اعضاء"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/imageGroupCard"
                  app:layout_constraintTop_toBottomOf="@+id/nameCardGroup"/>
        <TextView android:textSize="12sp" android:textColor="@color/darkGray" android:id="@+id/textView23"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="رتبه"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/imageGroupCard"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/nameCardGroup"/>
        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/nameCardGroup"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="گروه دماوند"
                  android:drawableLeft="@drawable/ic_navigate_before_black_24dp"
                  app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                  app:layout_constraintEnd_toEndOf="@+id/imageGroupCard"
                  app:layout_constraintStart_toStartOf="@+id/imageGroupCard"
                  app:layout_constraintTop_toBottomOf="@+id/imageGroupCard" app:layout_constraintVertical_bias="0"/>
        <TextView android:textSize="12sp" android:textColor="@color/backgroundWhite" android:id="@+id/rankCardGroup"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="112"
                  app:layout_constraintBottom_toTopOf="@+id/textView23"
                  app:layout_constraintEnd_toEndOf="@+id/textView23"
                  app:layout_constraintStart_toStartOf="@+id/textView23"/>
        <TextView android:textSize="12sp" android:textColor="@color/backgroundWhite" android:id="@+id/memCardGroup"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="26"
                  app:layout_constraintBottom_toTopOf="@+id/textView18"
                  app:layout_constraintEnd_toEndOf="@+id/textView18"
                  app:layout_constraintStart_toStartOf="@+id/textView18"/>
        <ImageView android:id="@+id/imageView13" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_marginTop="16dp"
                   android:layout_marginBottom="8dp" android:src="@drawable/ic_favorite_border_black_24dp"
                   android:tint="@color/gray" android:layout_marginStart="8dp" android:layout_marginEnd="16dp"
                   app:layout_constraintBottom_toTopOf="@id/memCardGroup" app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="1" app:layout_constraintStart_toEndOf="@+id/imageGroupCard"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
