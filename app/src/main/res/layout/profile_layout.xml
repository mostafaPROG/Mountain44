<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_height="match_parent" android:background="@android:color/transparent">
            <ImageView android:layout_width="match_parent" android:layout_height="450dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:src="@color/colorPrimary"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:id="@+id/imageButton" android:background="@android:color/transparent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardViewInfo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="8dp" app:cardElevation="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="مصطفی قربانزاده"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:layout_marginTop="43dp"
                            android:fontFamily="@font/iransansweb_medium"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/darkGray" android:textSize="18sp"/>
                    <TextView
                            android:text="+۹۸۹۱۵۲۴۴۲۹۲۵"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            app:layout_constraintEnd_toEndOf="@+id/textView2"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/textView2" android:textColor="@color/gray"/>
                    <TextView
                            android:text="شماره تماس"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:textSize="14sp"
                            android:textColor="#E7D249"
                            app:layout_constraintTop_toTopOf="@+id/textView3"
                            app:layout_constraintBottom_toBottomOf="@+id/textView3"
                            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="16dp"/>
                    <TextView
                            android:text="خراسان رضوی ، تربت حیدریه"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView46"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView3" android:textSize="14sp"
                            android:textColor="@color/gray" android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="1.0"/>
                    <TextView
                            android:text="محل زندگی"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView36"
                            app:layout_constraintTop_toTopOf="@+id/textView17"
                            app:layout_constraintBottom_toBottomOf="@+id/textView17"
                            app:layout_constraintStart_toEndOf="@+id/textView17" android:layout_marginStart="16dp"
                            android:textSize="14sp" android:textColor="#E7D249"/>
                    <TextView
                            android:text="برنامه نویس"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView44"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
                            app:layout_constraintEnd_toEndOf="@+id/textView17"
                            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
                    <TextView
                            android:text="شغل"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView45"
                            android:textSize="14sp"
                            android:textColor="#E7D249"
                            app:layout_constraintTop_toTopOf="@+id/textView44"
                            app:layout_constraintBottom_toBottomOf="@+id/textView44"
                            app:layout_constraintStart_toEndOf="@+id/textView44" android:layout_marginStart="16dp"/>
                    <TextView
                            android:text="۱۳۷۵/۰۹/۲۹"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView46"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
                            app:layout_constraintEnd_toEndOf="@+id/textView3"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="1.0"/>
                    <TextView
                            android:text="تاریخ تولد"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#E7D249"
                            android:id="@+id/textView47" app:layout_constraintStart_toEndOf="@+id/textView46"
                            android:layout_marginStart="16dp"
                            app:layout_constraintTop_toTopOf="@+id/textView46"
                            app:layout_constraintBottom_toBottomOf="@+id/textView46"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:text="مشخصات گروه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:id="@+id/textViewInfoGroup" app:layout_constraintEnd_toEndOf="@+id/cardViewInfo"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    app:layout_constraintHorizontal_bias="1.0" android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/cardViewInfo"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cardViewInfoGroup"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardViewInfoGroup"
                    app:layout_constraintEnd_toEndOf="@id/cardViewInfo"
                    app:layout_constraintStart_toStartOf="@id/cardViewInfo" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewInfoGroup"
                    app:layout_goneMarginTop="8dp"
                    app:cardCornerRadius="8dp" app:cardElevation="4dp">
                <include layout="@layout/info_group2"/>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="70dp"
                    app:srcCompat="@drawable/logo2"
                    android:id="@+id/logoGroupProfile" app:maxImageSize="70dp"
                    app:borderWidth="1dp" app:elevation="4dp"
                    app:backgroundTint="@color/white"
                    android:visibility="visible"
                    app:fab_stroke_visible="true"
                    app:layout_constraintTop_toTopOf="@+id/cardViewInfoGroup"
                    app:layout_constraintBottom_toTopOf="@+id/cardViewInfoGroup"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewInfoGroup"
                    app:layout_constraintStart_toStartOf="@+id/cardViewInfoGroup"/>


            <TextView
                    android:text="مشخصات فردی"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:id="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/cardViewInfo"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    app:layout_constraintHorizontal_bias="1.0" android:textStyle="bold"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cardViewInfo"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="70dp"
                    app:srcCompat="@drawable/def_prof"
                    android:id="@+id/floatingActionButton" app:maxImageSize="70dp"
                    app:borderWidth="0dp" app:elevation="4dp"
                    app:backgroundTint="@android:color/transparent"
                    android:visibility="visible"
                    app:fab_stroke_visible="false"
                    app:layout_constraintTop_toTopOf="@+id/cardViewInfo"
                    app:layout_constraintBottom_toTopOf="@+id/cardViewInfo"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewInfo"
                    app:layout_constraintStart_toStartOf="@+id/cardViewInfo"/>

            <TextView
                    android:text="مدیریت گروه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:id="@+id/textView2222"
                    app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardViewInfoGroup"
                    app:layout_constraintEnd_toEndOf="@id/cardViewInfo" app:layout_constraintHorizontal_bias="1.0"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:id="@+id/cardViewIntro"
                    android:animateLayoutChanges="true"
                    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="@+id/cardViewInfo"
                    app:layout_constraintStart_toStartOf="@+id/cardViewInfo"
                    app:layout_constraintTop_toBottomOf="@+id/textView2222" android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp" app:cardElevation="4dp">
                <include layout="@layout/info_group"/>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="مدیریت رویدادها"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:id="@+id/modiriat_roydad"
                    app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardViewIntro"
                    app:layout_constraintEnd_toEndOf="@id/cardViewIntro" app:layout_constraintHorizontal_bias="1.0"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/modiriat_roydad"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewIntro"
                    app:layout_constraintStart_toStartOf="@+id/cardViewIntro"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp" android:id="@+id/cardViewRoydad"
                    android:layout_marginTop="8dp">
                <include layout="@layout/roydad_group"/>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="مدیریت مالی"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:id="@+id/modiriat_mali"
                    app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardViewRoydad"
                    app:layout_constraintEnd_toEndOf="@id/cardViewRoydad" app:layout_constraintHorizontal_bias="1.0"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="50dp"
                    android:src="@drawable/add_event"
                    android:id="@+id/addRoydad" app:maxImageSize="25dp"
                    app:borderWidth="0dp" app:elevation="4dp"
                    app:backgroundTint="@color/yellow"
                    android:visibility="visible"
                    app:fab_stroke_visible="true"
                    android:tint="@color/darkGray"
                    app:layout_constraintBottom_toBottomOf="@+id/cardViewRoydad"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewRoydad"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewRoydad"
                    app:layout_constraintStart_toStartOf="@+id/cardViewRoydad"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="ایجاد رویداد"
                      android:textSize="12sp"
                      android:textColor="@color/colorPrimaryDark"
                      app:layout_constraintBottom_toBottomOf="@id/addRoydad"
                      app:layout_constraintTop_toTopOf="@id/addRoydad"
                      app:layout_constraintEnd_toStartOf="@id/addRoydad"
                      app:layout_constraintHorizontal_bias="1"
                      app:layout_constraintVertical_bias="1"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/modiriat_mali"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewRoydad"
                    app:layout_constraintStart_toStartOf="@+id/cardViewRoydad"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp" android:id="@+id/cardViewMali"
                    android:layout_marginTop="8dp">
                <include layout="@layout/mali_layout"/>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:text="مدیریت گالری"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yekan"
                    android:id="@+id/modiriat_gallery"
                    app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardViewMali"
                    app:layout_constraintEnd_toEndOf="@id/cardViewMali" app:layout_constraintHorizontal_bias="1.0"/>
            <androidx.cardview.widget.CardView android:layout_width="0dp"
                                               android:layout_height="150dp"
                                               app:layout_constraintTop_toBottomOf="@id/modiriat_gallery"
                                               app:layout_constraintEnd_toEndOf="@id/cardViewMali"
                                               app:layout_constraintStart_toStartOf="@id/cardViewMali"
                                               app:cardCornerRadius="8dp"
                                               app:cardElevation="4dp"
                                               android:id="@+id/cardViewGallery"
                                               android:layout_marginTop="8dp">
                <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                             android:layout_gravity="center_vertical"
                             android:id="@+id/frameGalleryGroup"/>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="50dp"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
                    android:id="@+id/addGallery" app:maxImageSize="25dp"
                    app:borderWidth="0dp" app:elevation="4dp"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:visibility="visible"
                    app:fab_stroke_visible="true"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/cardViewGallery"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewGallery"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewGallery"
                    app:layout_constraintStart_toStartOf="@+id/cardViewGallery"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>