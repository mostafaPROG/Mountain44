<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="17:07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeSentMessage"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout5" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="@+id/linearLayout5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="1.0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:id="@+id/linearLayout5" app:layout_constraintHorizontal_bias="1.0" android:padding="8dp"
            android:background="@drawable/background_sent">
        <TextView
                android:text="contain the senderâ€™s nam"
                android:layout_width="match_parent"
                android:singleLine="false"
                android:maxEms="13"
                android:layout_height="wrap_content" android:id="@+id/sentMessage" android:textSize="14sp"
                android:textColor="@android:color/white" android:textDirection="locale" android:gravity="right"/>
    </LinearLayout>
    <ImageView
            android:layout_width="18dp"
            android:tint="@color/green"
            android:layout_height="18dp" android:src="@drawable/ic_done_black_24dp"
            android:id="@+id/checkMessageSent"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/timeSentMessage"
            app:layout_constraintEnd_toEndOf="@+id/timeSentMessage"
            app:layout_constraintStart_toStartOf="@+id/timeSentMessage" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout5" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>