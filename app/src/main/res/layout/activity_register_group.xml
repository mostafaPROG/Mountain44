<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"
                  android:orientation="horizontal">
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cancelRegister"
                android:paddingLeft="40dp"
                android:drawablePadding="4dp"
                android:paddingRight="40dp"
                android:textColor="@color/white"
                android:textSize="18sp"

                android:fontFamily="@font/yekan"
                android:drawableLeft="@drawable/ic_clear_black_24dp"
                android:background="@color/gray"
                android:text="انصراف"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_done_black_24dp"
                android:paddingLeft="40dp"
                android:fontFamily="@font/yekan"
                android:id="@+id/saveRegister"
                android:drawablePadding="4dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingRight="40dp"
                android:text="ذخیره"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="true"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.RegisterGroup">
            <TextView
                    android:text="ثبت گروه کوهنوردی"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/darkGray" android:textSize="22sp" android:fontFamily="@font/yekan"/>
            <TextView
                    android:text="هر شخص در صورت لیدر بودن می تواند اطلاعات گروه خود را در این صفحه ثبت کند"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView24" android:textColor="@color/gray"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:paddingRight="12dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/darkGray"
                    android:paddingLeft="12dp"
                    android:id="@+id/editText3"
                    app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/view2" app:layout_constraintStart_toStartOf="@+id/view2"
                    android:background="@drawable/back_stroke_pr2" android:hint="نام گروه" android:minHeight="40dp"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:id="@+id/view2" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView52"
                    app:layout_constraintStart_toStartOf="@+id/textView52"
                    app:layout_constraintEnd_toEndOf="@+id/textView52"
                    android:background="@color/gray"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/darkGray"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:ems="10"
                    android:id="@+id/editText4" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText3"
                    app:layout_constraintEnd_toEndOf="@+id/editText3"
                    app:layout_constraintStart_toStartOf="@+id/editText3"
                    android:hint="شماره مجوز" android:background="@drawable/back_stroke_pr2" android:minHeight="40dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText5"
                    android:textColor="@color/darkGray"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    app:layout_constraintStart_toStartOf="@+id/editText4"
                    app:layout_constraintEnd_toEndOf="@+id/editText4"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText4"
                    android:background="@drawable/back_stroke_pr2" android:hint="نام و نام خانوادگی لیدر"
                    android:minHeight="40dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText6"
                    android:paddingRight="12dp"
                    android:textColor="@color/darkGray"
                    android:backgroundTint="@color/colorPrimary"
                    android:paddingLeft="12dp"
                    app:layout_constraintStart_toStartOf="@+id/editText5"
                    app:layout_constraintEnd_toEndOf="@+id/editText5"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText5"
                    android:hint="معرفی گروه" android:background="@drawable/back_stroke_pr2" android:maxLines="8"
                    android:minHeight="40dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.17"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                    android:id="@+id/textView54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/iransansweb_medium"
                    android:text="اضافه کردن لوگو"
                    android:textColor="@color/darkGray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/floatingActionButton2"
                    app:layout_constraintStart_toStartOf="@+id/floatingActionButton2"
                    app:layout_constraintTop_toBottomOf="@+id/floatingActionButton2" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true" android:src="@drawable/ic_person_pin_black_24dp"
                    android:id="@+id/floatingActionButton3" app:layout_constraintStart_toEndOf="@+id/imageView7"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/imageView7"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/imageView7"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView7"/>
            <TextView
                    android:text="اسکن مجوز"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView55"
                    app:layout_constraintTop_toTopOf="@+id/floatingActionButton3"
                    app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton3"
                    app:layout_constraintStart_toEndOf="@+id/floatingActionButton3" android:layout_marginStart="8dp"
                    android:textColor="@color/darkGray" android:fontFamily="@font/iransansweb_medium"/>

            <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:padding="@dimen/material_size_32"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="@+id/editText6"
                    app:layout_constraintTop_toBottomOf="@+id/editText6"
                    app:srcCompat="@drawable/logo1" />

            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="300dp" app:srcCompat="@drawable/mojavez"
                    android:id="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/imageView5"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="120dp"
                    android:scaleType="fitStart"
                    android:maxWidth="300dp" android:layout_marginTop="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                    app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
